<a href="/movies">Back to the movies</a>
<h2>{{movie.title}}</h2>
<hr />
<div class="movieBox">
  <div class="movieImage">
    <img src="{{movie.image}}" /></div>
  <div class="movieInfo">
    <p>Director: {{movie.director}}</p>
    <p>Stars
      {{#each movie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </p>
    <p>Description: {{movie.description}}</p>
    <p> {{movie.showtimes}}</p>
  </div>
</div>
<hr />